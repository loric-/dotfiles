# Get current shell
MYSHELL=`ps -p $$ | awk '$1 != "PID" {print $(NF)}'`;

# Source zshrc or bashrc according to shell
if command -v /bin/zsh >/dev/null ; then 
    if [ $MYSHELL "==" "zsh" ] ; then
        source $SSHHOME/.sshrc.d/.zshrc;
    fi
else 
    source $SSHHOME/.sshrc.d/.bashrc;
fi

# Vim
# Check git installed and clone Vundle
if hash git >/dev/null 2>&1; then
    git clone https://github.com/VundleVim/Vundle.vim.git $SSHHOME/.sshrc.d/.vim/bundle/Vundle.vim &> /dev/null;
fi
export VIMINIT="let \$MYVIMRC='$SSHHOME/.sshrc.d/.vimrc' | source \$MYVIMRC";

# Git
alias git="HOME=$SSHHOME/.sshrc.d/ git";

