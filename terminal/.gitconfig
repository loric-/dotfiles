[user]
	email = loric.brevet@gmail.com
	name = Loric Brevet
[push]
	default = current
[alias]
	tree = log -i --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lo = log -i --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	grep = log -i --all --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges --grep
  sh = show
	st = status
	co = checkout
	br = branch
	ci = commit
	mt = mergetool
	dt = difftool
  di = diff
  dm = difftool -t meld
  mm = mergetool -t meld
[core]
	editor = vim
[color]
	ui = true
[merge]
	tool = vimdiff
[diff]
  tool = vimdiff
