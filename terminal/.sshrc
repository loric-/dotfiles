# Define temporary home
export HOME=$SSHHOME/.sshrc.d

# Get current shell
MY_SHELL=`ps -p $$ | awk '$1 != "PID" {print $(NF)}'`;

# Source zshrc or bashrc according to shell
if command -v /bin/zsh >/dev/null && [ $MY_SHELL "==" "zsh" ] ; then
    source $HOME/.zshrc;
else 
    source $HOME/.bashrc;
fi

# Initialize lesskey
lesskey

# Check git installed and clone Vundle
if hash git >/dev/null 2>&1; then
    git clone https://github.com/VundleVim/Vundle.vim.git $HOME/.vim/bundle/Vundle.vim &> /dev/null;
fi
