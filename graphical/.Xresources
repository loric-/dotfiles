! clean up urxvt, add keybinds
URxvt.intensityStyles: false
URxvt.scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false

! font
URxvt*font: xft:inconsolata:size=13

! Size
URxvt.geometry: 80x40

! terminal padding
URxvt.internalBorder: 20

! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
! you will need to install the relevent perl extensions for these to work
URxvt.perl-ext-common: default,matcher,clipboard,vtwheel,resize-font
URxvt.url-launcher: /usr/bin/google-chrome
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

! tmux improvements
URxvt*loginShell: true
URxvt*scrollTtyKeypress: true
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: false
URxvt*skipScroll: true
URxvt*fading: 30
URxvt*visualBell: false
URxvt*saveLines: 50000

! special
*.foreground:   #eceff1
*.background:   #2F343F
*.cursorColor:  #eceff1
! black
*.color0:       #182125
*.color8:       #37474f
! red
*.color1:       #ff9800
*.color9:       #ffa74d
! green
*.color2:       #8bc34a
*.color10:      #9ccc65
! yellow
*.color3:       #ffc107
*.color11:      #ffa000
! blue
*.color4:       #03a9f4
*.color12:      #81d4fa
! magenta
*.color5:       #e91e63
*.color13:      #ad1457
! cyan
*.color6:       #009688
*.color14:      #26a69a
! white
*.color7:       #cfd8dc
*.color15:      #eceff1

! rofi
rofi.opacity:      85
rofi.lines:        2
rofi.font:         Droid Sans 18
rofi.color-window: #2f343f,#2f343f
rofi.color-normal: #2f343f,#f3f4f5,#2f343f,#2f343f,#9575cd
rofi.bw:           0
rofi.eh:           2
