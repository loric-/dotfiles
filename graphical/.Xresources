URxvt.background:                 [99]base00
URxvt.termName:                   rxvt-256color
URxvt.internalBorder:             20
URxvt.font:                       xft:Inconsolata for Powerline:size=13
URxvt.geometry:                   80x20
URxvt.depth:                      32
URxvt.scrollBar:                  false
URxvt.mouseWheelScrollPage:       false
URxvt.cursorBlink:                true
URxvt.saveLines:                  50000
URxvt.fading:                     05
URxvt.intensityStyles:            false
URxvt.iso14755:                   false
URxvt.iso14755_52:                false
URxvt.loginShell:                 true
URxvt.matcher.button:             1
URxvt.matcher.rend.0:             Uline Bold fg5
URxvt.perl-ext-common:            keyboard-select,matcher,resize-font
URxvt.scrollTtyKeypress:          true
URxvt.scrollTtyOutput:            false
URxvt.scrollWithBuffer:           false
URxvt.skipScroll:                 true
URxvt.urgentOnBell:               true
URxvt.url-launcher:               /usr/bin/google-chrome
URxvt.visualBell:                 false
URxvt.keysym.M-g:                 perl:keyboard-select:activate
URxvt.keyboard-select.clipboard:  true

! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  base01,  base0D,  base00

! Property Name     BG      FG      BG-alt  Head-BG Head-FG
rofi.color-normal:  base01, base05, base01, base01, base0D
rofi.color-active:  base01, base08, base01, base01, base0D
rofi.color-urgent:  base01, base08, base01, base01, base08

! Set the desired separator style
rofi.separator-style: solid

rofi.sidebar-mode:     false
rofi.font:             inconsolata 16
rofi.fixed-num-lines:  true
rofi.hide-scrollbar:   true

rofi.opacity:          100
rofi.width:            40
rofi.lines:            8
rofi.columns:          1
rofi.bw:               2
rofi.location:         0
rofi.padding:          20
