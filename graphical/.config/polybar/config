[module/powermenu]
type = custom/menu

format-padding = 2

label-open = 
label-close = 
label-separator = " | "

menu-0-0 = Power Off
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec = $HOME/.config/i3/i3exit shutdown
menu-0-1 = Reboot
menu-0-1-foreground = ${colors.foreground}
menu-0-1-exec = $HOME/.config/i3/i3exit reboot
menu-0-2 = Lock
menu-0-2-foreground = ${colors.foreground}
menu-0-2-exec = $HOME/.config/i3/i3exit lock
menu-0-3 = Logout
menu-0-3-foreground = ${colors.foreground}
menu-0-3-exec = $HOME/.config/i3/i3exit logout

[module/music]
